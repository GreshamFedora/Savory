<h2 class="public-title">Recipes</h2>
<ul class="center">
    <li>
        <form action="/stories/search/:query" method="GET">
            <div class="input-search">
                <div>
                    <input type="search" name="query" placeholder="Search by Title or Keyword" style="text-align: center" minlength="3" size="70">
                </div>
                <button class="btn search-btn blue" type="submit">&nbsp;Search&nbsp;</button>
            </div>
        </form>
    </li>
</ul>
<ul class="center">
    <div class="sort">
        <form action="/stories/" method="GET">
            <a class="btn-flat disabled">&nbsp;Sort By&nbsp;</a>
            <button class="btn" type="submit" name="query" value="newest">&nbsp;Newest&nbsp;</button>
        </form>
        <form action="/stories/" method="GET">
            <button class="btn" type="submit" name="query" value="oldest">&nbsp;Oldest&nbsp;</button>
        </form>
    </div>
</ul>
<div class="row">
    {{#each stories}}
        <div class="s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content">
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                    <h5 class="recipe-title">{{title}}</h5>
                    <p>{{stripTags (truncate body 2000)}}</p>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">View Full Recipe</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No recipes to display.</p>
    {{/each}}
</div>